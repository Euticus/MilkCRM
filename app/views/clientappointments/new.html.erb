<div class="row">
    <div class="col-lg-6">
<h1> Create a CLIENT Appointment </h1><hr>

<%= form_for @clientappointment, url: clientappointments_path do |f| %>

    <%= f.label :description %>
    <%= f.text_field :description %><br>
    <%= f.label :time %>
    <%= f.text_field :time %><br>
    <%= f.label :date %>
    <%= f.text_field :date %><br>
    <%= f.label :location %>
    <%= f.text_field :location %><br>
    <%= f.collection_select :client_id, Client.all, :id, :name, prompt: true %><br><br>
    <%= f.collection_select :employee_id, Employee.all, :id, :name, prompt: true %><br><br>
    <%= f.submit "Create Appointment" %>
    <% end %>

</div>
<div class="col-lg-6">
    <h1> Create a CUSTOMER Appointment </h1>
    <hr>
<%= form_for @customerappointment, url: customerappointments_path do |f| %>
  
    <%= f.label :description %>
    <%= f.text_field :description %><br>
    <%= f.label :time %>
    <%= f.text_field :time %><br>
    <%= f.label :date %>
    <%= f.text_field :date %><br>
    <%= f.label :location %>
    <%= f.text_field :location %><br>
    <%= f.collection_select :customer_id, Customer.all, :id, :name, prompt: true %><br><br>
    <%= f.collection_select :employee_id, Employee.all, :id, :name, prompt: true %><br><br>
    <%= f.submit "Create Appointment" %>
    <% end %>
<br> 
</div>
</div> 
