<div class="col-lg-6 offset-lg-3 py-4">
 <div class="card">
<h3 class="text-center">Please Log In </h3>
<hr>
<% if flash[:alert]%>
  <% flash[:alert].each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<%= form_tag sessions_path do %>

  <%= label_tag "Email" %>
  <%= text_field_tag :email, "", class: "form-control" %>
  <br>
  <%= label_tag 'Password' %>
  <%= password_field_tag :password, "", class: "form-control" %>
  <br>
  <%= submit_tag "Sign In", class: "btn btn-primary" %>
<% end %>
</div>
</div>
<%= link_to "Sign up", new_employee_path %>


