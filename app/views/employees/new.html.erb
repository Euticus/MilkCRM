<h1>Create a New Employee</h1>
<%= form_for @employee do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name%><br />

  <%= f.label :email %>:
  <%= f.text_field :email %><br />

  <%= f.label :phone %>:
  <%= f.text_field :phone %><br />

  <%= f.label :employee_number %>:
  <%= f.text_field :employee_number %><br />

  <%= f.submit %>
<% end %>
