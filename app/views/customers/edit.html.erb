
<div class="col-lg-6 offset-lg-3 py-4">
    <div class="card">
    <h2>Edit Customer</h2>
    <%= form_for @customer do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name%><br />

      <%= f.label :phone %>
      <%= f.text_field :phone %><br />

      <%= f.label :email %>
      <%= f.text_field :email %><br />

      <%= f.label :budget %>$
      <%= f.text_field :budget %><br> <br>

    <%= f.submit %>
    <% end %>
    </div>
  </div>